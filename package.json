{
  "name": "mikro-orm-strict",
  "version": "0.1.0",
  "description": "Type-safe extensions for MikroORM: createStrict, assignStrict, getStrictReference, Unflushed<T>, and flush guards",
  "keywords": [
    "mikro-orm",
    "mikroorm",
    "typescript",
    "type-safe",
    "orm",
    "entity-manager",
    "strict",
    "unflushed"
  ],
  "license": "MIT",
  "author": "Nikita Herndlhofer",
  "repository": {
    "type": "git",
    "url": "https://github.com/NikitaHerndlhofer/mikro-orm-strict.git"
  },
  "homepage": "https://github.com/NikitaHerndlhofer/mikro-orm-strict#readme",
  "bugs": "https://github.com/NikitaHerndlhofer/mikro-orm-strict/issues",
  "type": "module",
  "sideEffects": true,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsup && node scripts/postbuild.mjs",
    "test": "vitest --run --typecheck",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@mikro-orm/core": ">=6.0.0"
  },
  "devDependencies": {
    "@mikro-orm/core": "^6.4.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
